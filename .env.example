# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rag_chatbot
DB_ECHO=False
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Security
SECRET_KEY=your-secret-key

# OpenRouter Configuration
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_MODEL=openai/gpt-3.5-turbo

# Embedding Configuration
# Set USE_LOCAL_EMBEDDINGS=true to use free local embeddings (sentence-transformers)
# Set USE_LOCAL_EMBEDDINGS=false to use OpenRouter embeddings (requires API key & credits)
USE_LOCAL_EMBEDDINGS=false
EMBEDDING_MODEL=text-embedding-ada-002

# Vector Database
VECTOR_DB_TYPE=chroma
CHROMA_DB_DIR=./chroma_db

# Logging
LOG_LEVEL=INFO
